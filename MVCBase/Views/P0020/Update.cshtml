@using MVCBase.ViewModels
@model P0010ViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Update</title>
    <script src="~/Scripts/P0020/CheckSubmitUpdate.js"></script>
</head>
<body style="background-color:#e8fcfc">
    P0020.Update | 修改
    <hr />
    <div style="background-color:#f6f6e5;">
        <a href="~/P0020">多筆清單</a> <br />
        <br />
        <div id="divError" style="color:red; visibility:hidden;"></div>
        <form action="/P0020/SubmitUpdate" method="post">
            編號 = @Model.ms1 <input type="hidden" id="txtMS1" name="ms1" value="@Model.ms1" /> <br />
            姓名 = <input type="text" id="txtMS2" name="ms2" value="@Model.ms2" /> <span style="color:red;">@Html.ValidationMessage("ms2")</span> <br />
            國文 = <input type="text" id="txtMI1" name="mi1" value="@Model.mi1" /> <span style="color:red;">@Html.ValidationMessage("mi1")</span> <br />
            英文 = <input type="text" id="txtMI2" name="mi2" value="@Model.mi2" /> <span style="color:red;">@Html.ValidationMessage("mi2")</span> <br />
            總分 = @Model.miSum <br />
            平均 = <span style="color:@Model.msColor">@Model.mi1Extra</span> <br />
            若平均低於60分, 則為紅色, 否則為綠色. <br />
            <br />
            @*<input type="submit" name="btnSubmit" value="修改" onclick="return confirm('確認修改嗎?');" />
    <input type="submit" name="btnSubmit" value="刪除" onclick="return confirm('確認刪除嗎?');" />*@
            <input type="submit" name="btnSubmit" value="修改" onclick="return CheckSubmitUpdate();" />
            <input type="submit" name="btnSubmit" value="刪除" onclick="return CheckSubmitDelete();" />
            <input type="reset" name="reset" value="重填" />
            <input type="submit" name="btnSubmit" value="取消" />
        </form>
        <br />
    </div>
    <hr />
    <a href="http://www.luckstar.com.tw">LuckStar Computer Inc.</a> | 執行時間=@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss.fff")

    @MvcHtmlString.Create(ViewBag.ErrorList)
</body>
</html>


